---
import type { CollectionEntry } from 'astro:content'

const { recipe } = Astro.props;

interface Props {
    article: CollectionEntry<'recipes'>
}
---
        <!-- Article Card -->
        <div class="max-w-md mx-auto mt-10">
          <div class="bg-white rounded-lg overflow-hidden shadow-lg">
            <a href={'/recipes/' + recipe.slug}>
              <img
                src={recipe.data.image}
                alt="recipe Image"
                class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
              />
            </a>
            <div class="p-6">
              <h2 class="text-2xl font-semibold mb-2">
                <a href={'/recipes/' + recipe.slug}> {recipe.data.title} </a>
              </h2>
              <p class="text-gray-600 text-sm mb-4">{recipe.data.shortDescription}</p>
            </div>
          </div>
        </div>