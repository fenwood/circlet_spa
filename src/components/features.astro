---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
import bbq from '../assets/icon-bbq.png';
import pork from '../assets/icon-pig.png';
import hotdog from '../assets/icon-hotdog.png';
import hamburger from '../assets/icon-hamburger.png';
import { Image } from "astro:assets";

const features: Array<FeatureItem> = [
  {
    title: "Amazing Hot Dogs",
    description:
      "Build your site using React, Svelte, Vue, Preact, web components, or just plain ol' HTML + JavaScript.",
    icon: '/images/icon-hotdog.png',
  },
  {
    title: "Pulled Pork Sandwiches",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: '/images/icon-pig.png',
  },
  {
    title: "Smash Burgers",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page. If the user never sees it, they never load it.",
    icon: '/images/icon-hamburger.png',
  },
  {
    title: "Brisket",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: '/images/icon-brisket.png',
  },
  {
    title: "Sausages",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: '/images/icon-sausage.png',
  },
  {
    title: "Smoked Ribs",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: '/images/icon-bbq.png',
  },
];
---

<ContentSection title="What we offer" id="about">
  <Fragment slot="lead">
  We’re not just a catering company; we’re <span class="text-primary">flavor architects</span>, smoke whisperers, and grill virtuosos. 
  Our passion? Crafting <span class="text-primary">unforgettable barbeque</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <img src={icon} alt="text" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
